{
	"name": "chat-app",
	"version": "1.0.0",
	"description": "This application is a real-time chat application that allows users to send and receive messages instantly. It uses React with TypeScript for the frontend and Express.js with TypeScript for the backend, ensuring type safety and better code quality.",
	"main": "index.js",
	"scripts": {
		"backend": "npm run dev -w backend",
		"backend-build": "npm run build -w backend",
		"backend-start": "npm start -w backend",
		"frontend-build": "npm run build -w frontend",
		"frontend-start": "npm start -w frontend",
		"frontend": "npm run dev -w frontend",
		"dev": "concurrently \"npm run backend\" \"npm run frontend\"",
		"start": "concurrently \"npm run backend-start\" \"npm run frontend-start\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/michallowkiet/chat-app.git"
	},
	"keywords": [],
	"author": "Michał Łowkiet",
	"workspaces": [
		"frontend",
		"backend"
	],
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/michallowkiet/chat-app/issues"
	},
	"homepage": "https://github.com/michallowkiet/chat-app#readme",
	"devDependencies": {
		"concurrently": "^9.1.2"
	}
}
